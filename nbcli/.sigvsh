  $HOME/sigv/nbcli/scan "$@"
}

### Window Title
function window() {
  echo -n -e "\033]0;$1\007"
}

### Random Password Generator
function rpg() {
  date | md5 | head -c $1 | pbcopy ; echo
  echo "copied to clipboard..."
}

### QR code utils
function qr() {
  if [[ "$1" == "-r" ]]
  then
    zbarimg $2
  else
    qrencode $1 -o $2
  fi
}

### History of commands
function histo() {
  history | cut -c 8-
}

